<!DOCTYPE html>

<html lang="en" class="h-100">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Johan Ivarsson" />
    <meta name="description" content="Lexicon MVC - training excersise" />
    <meta name="keywords" content="HTML, CSS, Lexicon" />
    <title>@ViewBag.Title</title>
    <link href="~/css/Style.css" rel="stylesheet" />
    
    
</head>

<body class="d-flex flex-column h-100">

    <header>
        <!-- Fixed navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-lignt fixed-top">
            <div class="container-fluid">
                <img class="ms-3 ms-lg-3 pt-1"
                     src="../icons/kerberos-32x32.png"
                     alt=""
                     height="32"
                     width="32" />

                <a class="navbar-brand ps-2 ms-2" href="#">
                    <span>Johan Daniel |</span> @ViewBag.Title

                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse navbar-wrap border-0" id="navbarCollapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <hr class="d-lg-none" />
                            <span class="nav-link active">

                                @Html.ActionLink("Home", "Index", "Home")
                            </span>
                            <span class="visually-hidden">(current)</span>
                        </li>

                        <li class="nav-item">
                            <hr class="d-lg-none" />
                            <span class="nav-link"> @Html.ActionLink("Projects", "Projects", "Home")</span>
                        </li>

                        <li class="nav-item">
                            <hr class="d-lg-none" />
                            <span class="nav-link"> @Html.ActionLink("Contact", "Contact", "Home")</span>
                        </li>

                        <li class="nav-item">
                            <hr class="d-lg-none" />
                            <span class="nav-link"> @Html.ActionLink("About", "About", "Home")</span>
                        </li>


                        <li class="nav-item dropdown">
                            <hr class="d-lg-none" />
                            <a class="nav-item nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Extras
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item disabled" href="#"><span class="text-center text-black-50">Medical</span></a></li>
                                <li><span class="dropdown-item"> @Html.ActionLink("Check Fever", "CheckFever", "Doctor")</span></li>

                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item disabled" href="#"><span class="text-center text-black-50">Games</span></a></li>
                                <li><span class="dropdown-item"> @Html.ActionLink("Guessing Game", "GuessingGame", "Game")</span></li>                              
                            </ul>
                        </li>

                        <li class="nav-item" id="socialMediaIcons">
                            <hr class="d-lg-none" />
                            <a class="d-inline-block sm-icons"
                               href="https://www.linkedin.com/in/johan-ivarsson-b1915b92/">
                                <img src="~/lib/bootstrap/icons/linkedin.svg"
                                     alt=""
                                     height="20"
                                     width="20" />
                            </a>

                            <a class="d-inline-block sm-icons"
                               href="https://twitter.com/Vingnir3">
                                <img class=""
                                     src="~/lib/bootstrap/icons/twitter.svg"
                                     alt=""
                                     height="20"
                                     width="20" />
                            </a>

                            <a class="d-inline-block sm-icons"
                               href="https://github.com/vingnir">
                                <img src="~/lib/bootstrap/icons/github.svg"
                                     alt=""
                                     height="20"
                                     width="20" />
                            </a>
                        </li>
                    </ul>
                </div>
            </div> <!-- End Container -->
        </nav>
    </header>


    <main class="flex-shrink-0">
        <!-- Begin page content -->
        <div class="container">

            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto py-3">
        <div class="container text-center">
            <span class="text-muted">
                Copyright&COPY; @DateTime.Now.Year | Johan Ivarsson | All rights reserved
            </span>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script type="text/javascript" src="~/js/main.js"></script>
    <script type="text/javascript" src="~/js/vendor/glightbox/js/glightbox.min.js"></script>
    <script type="text/javascript" src="~/js/vendor/swiper/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="~/js/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script type="text/javascript" src="~/js/vendor/aos/aos.js"></script>
    <script type="text/javascript" src="~/js/portfolio.js"></script>
    
</body>
</html>